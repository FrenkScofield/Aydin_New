
@{
    Layout = "_Layout";
    var content = ViewBag.content as ContentPage;
    var contents = ViewBag.contents as List<ContentPage>;
 
}


<!-- start page title -->
<section class="half-section bg-light-gray parallax" data-parallax-background-ratio="0.5" style="background-image:url('/images/blogbg.jpg');    padding: 60px 0px;">
    <div class="container">
        <div class="row align-items-stretch justify-content-center extra-small-screen">
            <div class="col-12 col-xl-6 col-lg-7 col-md-8 page-title-extra-small text-center d-flex justify-content-center flex-column">
                <h1 class="
						alt-font font-weight-500 text-white text-extra-medium d-block margin-20px-bottom sm-margin-10px-bottom">
                    Bizden Haberler
                </h1>
                <h2 class="text-white alt-font font-weight-500 letter-spacing-minus-1px line-height-50 sm-line-height-45 xs-line-height-30 no-margin-bottom">Güncel Haberler, Gelişmeler...</h2>
            </div>
        </div>
    </div>
</section>
<!-- end page title -->
<!-- start section -->
<section class="bg-light-gray pt-0 padding-eleven-lr xl-padding-two-lr xs-no-padding-lr">
    <div class="container-fluid">
        <div class="row">

            <!--<div class="col-12 text-center">-->
                <!-- start filter navigation -->
                <!--<ul class="blog-filter grid-filter nav nav-tabs justify-content-center border-0 text-uppercase font-weight-500 alt-font padding-4-rem-top padding-3-rem-bottom md-padding-4-half-rem-bottom sm-padding-2-rem-bottom">
                    <li class="nav active"><a data-filter="*" href="#">All</a></li>
                    <li class="nav"><a data-filter=".fashion" href="#">Gıda</a></li>
                    <li class="nav"><a data-filter=".travel" href="#">Sağlık</a></li>
                    <li class="nav"><a data-filter=".lifestyle" href="#">Ekonomi</a></li>
                    <li class="nav"><a data-filter=".business" href="#">Kurumsal</a></li>
                </ul>-->
                <!-- end filter navigation -->
            <!--</div>-->

            <div class="col-12 blog-content sm-no-padding-lr margin-top-25 blogList boxedHeight">
                <ul class="blog-classic blog-wrapper grid grid-loading grid-5col xl-grid-4col lg-grid-3col md-grid-2col sm-grid-2col xs-grid-1col gutter-double-extra-large">
                    <li class="grid-sizer"></li>
                    @foreach (var item in contents.OrderBy(o => o.OrderNo))
                    {
                      
                        <li class="grid-item wow animate__fadeIn">
                            <div class="blog-post">
                                <div class="blog-post-image margin-40px-bottom md-margin-35px-bottom xs-margin-25px-bottom">
                                    <a href="/@item.Link" title="@item.Name"><img  src="@SessionRequest.config.ImageUrl/fileupload/UserFiles/Folders/@(item.ThumbImage!=null?item.ThumbImage.Link:"")" alt="@item.Name"></a>
                                </div>
                                <div class="post-details margin-30px-bottom md-margin-10px-bottom xs-no-margin-bottom">
                                    <a href="/@item.Link" class="alt-font font-weight-500 text-extra-medium text-extra-dark-gray d-block margin-20px-bottom xs-margin-10px-bottom">@item.Description</a>
                                    <p class="w-95">@item.ContentShort</p>
                                    <span class="separator bg-green"></span><a href="/@item.Link" class="alt-font font-weight-500 text-extra-small text-uppercase text-green">Daha fazlası</a>
                                </div>
                            </div>
                        </li>
                    }

                    </ul>


</div>
                    </section>
                    <!-- end section -->
